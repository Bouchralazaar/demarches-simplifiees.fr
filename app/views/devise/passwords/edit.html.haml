- content_for(:title, 'Changement de mot de passe')

- content_for :footer do
  = render partial: 'root/footer'

.container.devise-container
  .one-column-centered
    = devise_error_messages!

    - if populated_resource.present?
      = form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :patch, class: 'form' }) do |f|

        %h1 Changement de mot de passe

        = f.hidden_field :reset_password_token

        = f.label 'Nouveau mot de passe'
        = render 'password_complexity/field', { form: f, min_complexity: populated_resource.min_password_complexity }

        = f.label 'Confirmez le nouveau mot de passe'
        = f.password_field :password_confirmation, autocomplete: 'off'

        = f.submit 'Changer le mot de passe', class: 'button large primary expand', id: "submit-password", data: { disable_with: "Envoiâ€¦" }
    - else
      %p
        Ce lien n'est plus valable. Vous pouvez
        = link_to 'redemander un nouveau mot de passe', new_password_path(resource_name)
